<h3>Game of Life</h3>

<% if defined?(error_message) %>
  <div class="errors">
    <%= error_message %>
  </div>
<% end %>

<form action="/" method="post" class="new-game">
  <label for="grid">Grid Size</label>
  <input type="text" name="grid-size" id="grid" placeholder="Must be divisible by ten">
  <label for="cells">Live Cells</label>
  <input type="text" name="live-cells" id="cells">
  <input type="submit" value="New Game" class="submit-button">
</form>

<div class="cell-container">
  <% grid.each_with_index do |coordinate, index| %>
    <% if coordinate[1] > grid[index-1][1] %>
      <br/>
    <% end %>
    <div class="cell cell-<%= game.cells[index] %>">
      <div class="v-align">
        <div class="cell-content">
          <%= game.cells[index] %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<form action="/" method="post">
  <input type="hidden" name="advance" value="true">
  <input type="submit" value="Advance" class="submit-button">
</form>